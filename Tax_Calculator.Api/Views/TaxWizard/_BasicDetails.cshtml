@model Tax_Calculator.Models.BasicDetails

@{
    ViewBag.Title = "Step 1 – Basic Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-4">
    <div class="row">
        <div class="col-12 col-lg-10 mx-auto">
            <h2 class="mb-3">Step 1: Basic Details</h2>
            <div class="progress mb-4">
                <div class="progress-bar" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">20%</div>
            </div>

            @using (Html.BeginForm("BasicDetails", "TaxWizard", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="card shadow-sm mb-3">
                    <div class="card-body">
                        <div class="row g-3">
                            <!-- First Name -->
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.First_Name, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.First_Name, new { @class = "form-control", placeholder = "First name" })
                                @Html.ValidationMessageFor(m => m.First_Name, "", new { @class = "text-danger" })
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Last_Name, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Last_Name, new { @class = "form-control", placeholder = "Last name" })
                                @Html.ValidationMessageFor(m => m.Last_Name, "", new { @class = "text-danger" })
                            </div>

                            <!-- DOB -->
                            <div class="col-md-4">
                                @Html.LabelFor(m => m.DOB, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.DOB, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
                                <small class="text-muted">We'll compute senior citizen status automatically.</small>
                                @Html.ValidationMessageFor(m => m.DOB, "", new { @class = "text-danger" })
                            </div>

                            <!-- PAN -->
                            <div class="col-md-4">
                                <label class="form-label">
                                    PAN Number
                                    <i class="bi bi-info-circle ms-1" data-bs-toggle="tooltip" title="Enter your 10-character PAN."></i>
                                </label>
                                @Html.TextBoxFor(m => m.PAN_NUMBER, new { @class = "form-control text-uppercase", maxlength = 10, placeholder = "ABCDE1234F" })
                                @Html.ValidationMessageFor(m => m.PAN_NUMBER, "", new { @class = "text-danger" })
                            </div>

                            <!-- Future fields for TaxYear, ResidentStatus, TaxRegime (currently commented out) -->
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save & Continue</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}
